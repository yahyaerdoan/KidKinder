@model KidKinder.Entities.BookASeat
<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            @Html.Action("AboutListPartial", "Default")
            <div class="col-lg-5">
                <div class="card border-0">
                    <div class="card-header bg-secondary text-center p-4">
                        <h1 class="text-white m-0">Book A Seat</h1>
                    </div>
                    <div class="card-body rounded-bottom bg-primary p-5">
                        <form method="post" action="/BookASeat/AddBookNow/">
                            <div class="form-group">
                                <input type="text"
                                       name="Name"
                                       class="form-control border-0 p-4"
                                       placeholder="Your Name"
                                       required="required" />
                            </div>
                            <div class="form-group">
                                    <input type="text"
                                           name="Surname"
                                           class="form-control border-0 p-4"
                                           placeholder="Your Last Name"
                                           required="required" />
                                </div>
                                <div class="form-group">
                                    <input type="email"
                                           name="Email"
                                           class="form-control border-0 p-4"
                                           placeholder="YourEmail"
                                           required="required" />
                                </div>
                                <div class="form-group">
                                    <input type="text"
                                           name="Title"
                                           class="form-control border-0 p-4"
                                           placeholder="Title"
                                           required="required" />
                                </div>
                            <div class="form-group">
                                @Html.DropDownListFor(x => x.ClassRoomId, (SelectList)ViewBag.ClassRoomHeader, "Select A Class",
                               new { @class = "form-group; custom-select border-0 px-4 ", @style = "height: 47px" })
                            </div>
                            <div>
                                <button class="btn btn-secondary btn-block border-0 py-3"
                                        type="submit">
                                    Book Now
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>