@model KidKinder.Entities.BookASeat
<div class="container-fluid py-5">
    <div class="container">
        <div class="row align-items-center">
            @Html.Action("AboutListPartial", "Default")           
            <div class="col-lg-5">
                <div class="card border-0">
                    <div class="card-header bg-secondary text-center p-4">
                        <h1 class="text-white m-0">Book A Seat</h1>
                    </div>
                    <div class="card-body rounded-bottom bg-primary p-5">
                        <form method="post" action="/BookASeat/Index/">
                            <div class="form-group">
                                <input type="text"
                                       class="form-control border-0 p-4"
                                       placeholder="Your Name"
                                       required="required" />
                            </div>
                            <div class="form-group">
                                <input type="email"
                                       class="form-control border-0 p-4"
                                       placeholder="YourEmail"
                                       required="required" />
                            </div>
                            <div class="form-group">
                                @*@Html.DropDownListFor(h => h.ClassRoomId, new SelectList(ViewBag.ClassRoomHeader), "Select A Class",
                                 new { @class = "form-control" })*@
                                <select class="custom-select border-0 px-4"
                                        style="height: 47px">
                                    <option selected>Select A Class</option>

                                    <option value="1">Class 1</option>
                                    <option value="2">Class 1</option>
                                    <option value="3">Class 1</option>
                                </select>
                            </div>
                            <div>
                                <button class="btn btn-secondary btn-block border-0 py-3"
                                        type="submit">
                                    Book Now
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
